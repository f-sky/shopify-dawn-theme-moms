.announcement-bar__message {
  background-color: #d4bae0;
}

/* product */
.product:not(.product--no-media):not(.featured-product) {
  padding-bottom: 20px;
}

.product__media-icon {
  display: none;
}

.product__info-container .product-form, .product__info-container .product__description {
  margin: 0.5rem 0 2.5rem;  
}

.product:not(.product--no-media):not(.featured-product) .product__media-wrapper .product__media-list .product__modal-opener {
  border: 0;
}

.product:not(.product--no-media):not(.featured-product) .product__media-wrapper .product__media {
  padding-top: 70% !important;
}

.product:not(.product--no-media):not(.featured-product) .product__media-wrapper .product__media img {
  height: 100%;
  width: auto;
  max-height: 550px;
  left: 50%;
  transform: translateX(-50%);
}

.product:not(.product--no-media):not(.featured-product) .product__media-wrapper .product__media-toggle {
  pointer-events: none;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__title {
  font-family: 'EightiesComeback ExtBdCond';
  font-style: normal;
  font-weight: 900;
  font-size: 24px;
  line-height: 30px;
  display: flex;
  align-items: center;
  color: #27649C;
  padding-top: 20px;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__description {
  font-family: 'Reader Pro', serif;
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 24px;
  color: #27649C;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product-form__input {
  display: flex;
  align-items: center;
  column-gap: 10px;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product-form__input quantity-input.quantity {
  background: #FFFFFF;
  border: 1px solid #C4C4C4;
  box-sizing: border-box;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product-form__input quantity-input.quantity input {
  border-left: 1px solid #C4C4C4;
  border-right: 1px solid #C4C4C4;
  font-family: 'Glacial Indifference Regular', serif;
  font-style: normal;
  font-weight: normal;
  font-size: 22px;
  line-height: 26px;
  display: flex;
  align-items: center;
  color: #474747;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form {
  margin: 0;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit {
  display: flex;
  justify-content: space-between;
  font-family: 'Reader Bold Pro', serif;
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 25px;
  text-align: center;
  text-transform: uppercase;
  color: #FFFFFF;
  background-color: #F2A2A3;
  border-radius: 10px;
  padding: 13px;
  box-shadow: none;
  border: 2px solid #F2A2A3;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit .price {
  font-family: 'Reader Bold Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 25px;
  color: #fff;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit:hover {
  color: #F2A2A3;
  background: #fff;
  transition: all 0.3s ease;
  box-shadow: none;
}

.product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit:hover .price {
  color: #F2A2A3;
  transition: all 0.3s ease;
}

.product__accordion.accordion {
  border: 0;
}

.product__accordion.accordion .summary__title {
  padding-left: 28px;
}

.product__accordion.accordion .accordion__title {
  font-family: 'Reader Bold Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 24px;
  color: #27649C;
}

.product__accordion.accordion .accordion__content {
  font-family: 'Reader Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 24px;
  color: #27649C;
  padding: 0;
}

.product__accordion.accordion summary .icon-caret {
  left: 0;
  right: unset;
  height: 10px;
  color: #27649C;
}

/* --- safe & effective --- */
.rich-text.safe-effective-section {
  background-color: #F4C4C5;
  position: relative;
  margin: 0 !important;
  padding: 8rem;
}

.rich-text.safe-effective-section .h1 {
  color: #fff;
}

.rich-text.safe-effective-section .rich-text__text {
  color: #fff;
}

.rich-text.safe-effective-section .curved-line-5,
.rich-text.safe-effective-section .curved-line-6 {
  display: none;
}

/* --- prdocut details --- */
.image-with-text.product-details {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
  padding: 8rem;
  position: relative;  
  background-color: #FBF1ED;
}

.image-with-text.product-details .image-with-text__heading {
  font-family: "EightiesComeback ExtBdCond", serif;
  font-style: normal;
  font-weight: 900;
  font-size: 40px;
  line-height: 45px;
  color: #27649C;
  text-align: center;
  width: 100%;
  margin: auto;
}

.image-with-text.product-details .image-with-text__media img {
  height: 100%;
  width: auto;
}

.image-with-text.product-details .image-with-text__content {
  padding-left: 0;
  padding-right: 20px;
}

.image-with-text.product-details .image-with-text__text p{
  font-family: 'Glacial Indifference Regular', serif;
  font-style: normal;
  font-weight: normal;
  font-size: 22px;
  line-height: 26px;

  color: #011E42;
}

.image-with-text.product-details .image-with-text__text p .metafield-multi_line_text_field b {
  font-family: "EightiesComeback ExtBdCond", serif;
  font-style: normal;
  font-weight: 900;
  font-size: 30px;
  line-height: 30px;
  color: #27649C;
}

.image-with-text.product-details .image-with-text__text p .metafield-multi_line_text_field b:last-child {
  font-family: 'Reader Bold Pro', serif;
  font-weight: 700;
  font-size: 18px;
  line-height: 28px;
}

.image-with-text.product-details .image-with-text__text p .metafield-multi_line_text_field span {
  font-family: 'Reader Pro', serif;
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 28px;
  color: #27649C;
  display: block;
  margin-top: 12px;   
  margin-bottom: 14px;
}

.image-with-text.product-details .image-with-text__text p .metafield-multi_line_text_field span:nth-child(2) {
  margin-bottom: 30px;
}

/* --- partnered-with-farm --- */
.image-with-text.partnered-with-farm {
  margin-top: 2rem;
  margin-bottom: 2rem;
}

.image-with-text.partnered-with-farm .image-with-text__content {
  text-align: right;
}

/* --- transparency section --- */
.image-with-text.transparency-section {
  margin-top: 0;
  margin-bottom: 0 !important;  
}

.image-with-text.transparency-section .image-with-text__grid {
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.image-with-text.transparency-section .image-with-text__media {
  justify-content: end;
}

.image-with-text.transparency-section .rounded-top-full::after {
  border-color: #FBF1ED;
  border-bottom-color: transparent;
}

.image-with-text.transparency-section .image-with-text__content a.button {
  font-family: 'Reader Bold Pro';
  font-weight: 700;
  font-size: 18px;
  line-height: 25px;  
  color: #FFF;
  text-transform: uppercase;
  background: #F7C67B;
  border-radius: 10px;
  box-shadow: none;
  padding: 14px 20px;
  box-sizing: border-box;
  border: 2px solid #F7C67B;
}

.image-with-text.transparency-section .image-with-text__content a.button:hover {
  color: #F7C67B;
  background: #fff;
  transition: all 0.3s ease;
  box-shadow: none;
}

/* --- club benefits --- */
.multicolumn.club-benefits {
  position: relative;
  margin: 0 !important;
  padding: 12rem 0 12rem 8rem;
  background-color: #F5BB95;
  color: #fff;
}

.multicolumn.club-benefits .multicolumn-card {
  max-width: 500px;
}

.multicolumn.club-benefits .multicolumn-card h3 {
  font-family: 'EightiesComeback ExtBdCond';
  font-style: normal;
  font-weight: 900;
  font-size: 40px;
  line-height: 45px;
  color: #FFFFFF;    
}

.multicolumn.club-benefits .multicolumn-card .rte {
  color: #fff;
}

.multicolumn.club-benefits .multicolumn-list__item:first-child .rte {
  font-family: 'Reader Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 28px;
}

.multicolumn.club-benefits .multicolumn-list__item:nth-child(2) .rte {
  margin: auto;
  width: fit-content;  
  font-family: 'EightiesComeback ExtBdCond';
  font-style: normal;
  font-weight: 700;
  font-size: 26px;
  line-height: 28px;
}

.multicolumn.club-benefits .multicolumn-list__item:nth-child(2) .rte p {
  margin-bottom: 40px;
}

.multicolumn.club-benefits .multicolumn-list__item:nth-child(2) .rte p:last-child {
  margin-bottom: 0;
}

.multicolumn.club-benefits .curved-line-1,
.multicolumn.club-benefits .curved-line-2 {
  display: none;
}

@media screen and (min-width: 1281px) {
  .product:not(.product--no-media):not(.featured-product) .product__media-wrapper .product__media img {
    height: auto;
    width: 300px;
    top: 50%;
    transform: translate(-50%, -50%);
  }
}

@media screen and (min-width: 990px) {
  .product:not(.product--no-media):not(.featured-product) .product__media-wrapper {
    max-width: 50%;
    width: calc(50% - 1rem / 2);
    padding-right: 0rem;
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper {
    padding-left: 5rem;
    padding-right: 5rem;
    max-width: 50%;
    width: calc(50% - 1rem / 2);
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product-form__input {
    column-gap: 28px;
  }

  .image-with-text.product-details .image-with-text__heading {
    width: 50%;
  }
  
  .image-with-text.product-details .image-with-text__text {
    padding-right: 100px;
  }

  .image-with-text.product-details .image-with-text__media {
    padding-bottom: unset !important;
  }

  .image-with-text.product-details .image-with-text__media img {
    height: 100%;
    width: auto;
    max-width: 374px !important;
    right: 90px;
    left: unset;
    top: 50%;
    transform: translateY(-50%);
  }
}

@media screen and (min-width: 750px) {
  .product:not(.product--no-media):not(.featured-product) {
    padding-bottom: 7rem;
  }

  .product:not(.product--no-media):not(.featured-product) .product__media-wrapper {
    padding-left: 2rem;
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper {
    padding-right: 2rem;
    max-width: 700px;
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit {
    gap: 50px;
  }

  /* --- safe & effective --- */
  .rich-text.safe-effective-section .curved-line-5 {
    position: absolute;
    width: 100%;
    height: 72%;
    bottom: 0;
    left: 0;
    display: inline;
    background:url({{ 'img__curve_5.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
    pointer-events: none;
  }

  .rich-text.safe-effective-section .curved-line-6 {
    position: absolute;
    width: 100%;
    height: 74%;
    bottom: 0;
    right: 0;
    display: inline;
    background:url({{ 'img__curve_6.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
    background-position-x: right;
    pointer-events: none;
  }

  /* --- prdocut details --- */
  .spaced-section:nth-child(2) {
    margin-top: 0;
  }

  /*--- partnered-with-farm --- */
  .image-with-text.partnered-with-farm .image-with-text__content {
    padding-right: 0;
  }

  .image-with-text.transparency-section .image-with-text__content {
    padding-left: 0;
  }
  

  /* --- club benefits --- */
  .multicolumn.club-benefits .curved-line-1 {
    position: absolute;
    width: 100%;
    height: 35%;
    top: 0;
    left: 5rem;
    display: inline;
    background:url({{ 'img__curve_1.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
  }
  
  .multicolumn.club-benefits .curved-line-2 {
    position: absolute;
    width: 100%;
    height: 60%;
    bottom: 0;
    left: 0;
    display: inline;
    background:url({{ 'img__curve_2.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
  }
}

@media screen and (max-width: 749px) {
  .product:not(.product--no-media):not(.featured-product) {
    margin-top: 20px;
    padding-bottom: 0;
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__title {
    margin-top: 0;
  }

  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper .product__info-container .product-form .product-form__buttons .product-form__submit {
    width: 100%;
  }

  /* --- safe & effective --- */
  .rich-text.safe-effective-section {
    padding: 8rem 4rem 4rem;
  }

  .rich-text.safe-effective-section .rich-text__blocks {
    width: 100%;
  }

  /* --- prdocut details --- */
  .image-with-text.product-details {
    padding: 8rem 4rem 4rem;
  }

  .image-with-text.product-details .image-with-text__media {
    padding-bottom: 0 !important;
  }

  .image-with-text.product-details .image-with-text__content {
    padding-left: 0;
    padding-right: 0;
    padding-bottom: 20px;
  }

  /* --- partnered-with-farm --- */
  .image-with-text.partnered-with-farm .image-with-text__content {
    text-align: left;
  }

  /* --- club benefits --- */
  .multicolumn.club-benefits {
    padding: 8rem 4rem 4rem;
  }

  .multicolumn.club-benefits .title-wrapper-with-link {
    display: none;
  }

  .multicolumn.club-benefits .multicolumn-list__item:nth-child(2) .rte {
    margin: unset;
  }

  .multicolumn.club-benefits .multicolumn-list {
    padding: 0;
  }
}
